 <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lnrn.meriem.arabeapplication.act.act1_obj2"
    android:background="@drawable/bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginRight="15dp"
                    android:text="الوعي الصوتي > رصد القافية  > النشاط 1"
                    android:textColor="#c9c8c8" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@drawable/consigne"
               android:id="@+id/textView3"-->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/consigne"
                        android:gravity="start"
                        android:padding="40dp"
                        android:text="-أُكَمِّلُ الكَلِمَاتِ لِتَتَحَقَّقَ قَافِيَتُهَا مَعَ( فُصُولُُ).\n
أََقُومُ بِسَحْبِ القَافِيَةِ المُنَاسِبَةِ وَوَضْعِهَا فِي المُرَبَّعِ الأَحْمَرِ"
                        android:textAlignment="textStart"
                        android:textSize="18sp" />
                    <!--/LinearLayout-->

                    <FrameLayout
                        android:id="@+id/quest1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="11dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="145dp">

                            <TextView
                                android:id="@+id/mots1"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="start"
                                android:background="@color/colorAccent"
                                android:padding="25dp"
                                android:text="أُصُـ  _ _"
                                android:textAlignment="textStart"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </FrameLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/quest1"
                        android:gravity="center"
                        android:layout_marginTop="134dp">


                        <TextView
                            android:id="@+id/rim1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginEnd="51dp"
                            android:layout_marginRight="51dp"
                            android:layout_toLeftOf="@+id/rim2"
                            android:layout_toStartOf="@+id/rim2"
                            android:text="لٌ"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:background="@drawable/bg_border_circle"/>

                        <TextView
                            android:id="@+id/rim2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="52dp"
                            android:layout_marginRight="52dp"
                            android:text="يحُ"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/rim3"
                            android:layout_toStartOf="@+id/rim3"
                            android:background="@drawable/bg_border_circle"/>


                        <TextView
                            android:id="@+id/rim3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="65dp"
                            android:text="ولٌ"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/bg_border_circle"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_below="@+id/rim2"
                            android:layout_toLeftOf="@+id/rim3"
                            android:layout_toStartOf="@+id/rim3"
                            android:layout_marginRight="25dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginTop="15dp">

                            <Button
                                android:id="@+id/setfl"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_menu_send"
                                android:gravity="center"
                                android:shadowColor="@color/colorPrimary" />
                        </LinearLayout>
                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/quest2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="11dp"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="145dp">

                            <TextView
                                android:id="@+id/mots2"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="start"
                                android:background="@color/colorAccent"
                                android:padding="25dp"
                                android:text="فُضُـ  _ _"
                                android:textAlignment="textStart"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </FrameLayout>
                    <FrameLayout
                        android:id="@+id/quest3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="11dp"
                        android:visibility="invisible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="145dp">

                            <TextView
                                android:id="@+id/mots3"
                                android:layout_width="200dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="start"
                                android:background="@color/colorAccent"
                                android:padding="25dp"
                                android:text="قَبُـ  _ _"
                                android:textAlignment="textStart"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                    </FrameLayout>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.NestedScrollView>

    <!--menu-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp">
            <Button
                android:layout_width="120dp"
                android:id="@+id/prev"
                android:layout_height="match_parent"
                android:background="@drawable/prev"
                android:layout_gravity="start"/>
            <Button
                android:layout_width="50dp"
                android:id="@+id/menu"
                android:layout_height="40dp"
                android:background="@drawable/list"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="120dp"
                android:id="@+id/next"
                android:layout_height="match_parent"
                android:background="@drawable/next"
                android:layout_gravity="end"/>

        </android.support.design.widget.BottomNavigationView>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
