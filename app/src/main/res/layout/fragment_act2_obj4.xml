<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lnrn.meriem.arabeapplication.act.act2_obj4"
    android:background="@drawable/bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginRight="15dp"
                    android:text="الوعي الصوتي > التفييء > النشاط 2"
                    android:textColor="#c9c8c8" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@drawable/consigne"
               android:id="@+id/textView3"-->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/consigne"
                        android:gravity="start"
                        android:padding="40dp"
                        android:text=" -أَقْرَأُ الْكَلِمَات.\n -أَضَعُ الْكَلِمَة الَّتِي تَنْتَهِي بِالصَّامِتِ[ ل ] فِي الْكِتَابِ\n\n
ََأَقُومُ بِسَحْبِ الكَلِمَةِ المُنَاسِبَةِ وَوَضْعِهَا فِي الكِتَابِ"
                        android:textAlignment="textStart"
                        android:textSize="16sp" />
                    <!--/LinearLayout-->



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/quest1"
                        android:gravity="center"
                        android:layout_marginTop="120dp">




                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true">

                            <ImageView
                                android:id="@+id/book"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:src="@drawable/book" />

                            <Button
                                android:id="@+id/setfl"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:background="@drawable/ic_menu_send"
                                android:gravity="center"
                                android:shadowColor="@color/colorPrimary" />
                        </LinearLayout>
                    </RelativeLayout>
                    <FrameLayout
                        android:id="@+id/quest1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="0dp"
                        android:layout_marginTop="11dp"
                        android:visibility="visible">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="145dp">

                            <TextView
                                android:id="@+id/mots1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_border_circle"
                                android:text="سَائِلٌ"
                                android:textColor="#fff"
                                android:textSize="30sp"
                                android:layout_alignBaseline="@+id/mots2"
                                android:layout_alignBottom="@+id/mots2"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_marginLeft="50dp"
                                android:layout_marginStart="50dp" />

                            <TextView
                                android:id="@+id/mots2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_border_circle"
                                android:text="مُصَوِّرٌ"
                                android:textColor="#fff"
                                android:textSize="30sp"
                                android:layout_alignBaseline="@+id/mots3"
                                android:layout_alignBottom="@+id/mots3"
                                android:layout_centerHorizontal="true" />


                            <TextView
                                android:id="@+id/mots3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_border_circle"
                                android:text="لَذِيذٌ"
                                android:textColor="#fff"
                                android:textSize="30sp"
                                android:layout_marginRight="46dp"
                                android:layout_marginEnd="46dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true" />


                        </RelativeLayout>

                    </FrameLayout>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.NestedScrollView>

    <!--menu-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp">
            <Button
                android:layout_width="120dp"
                android:id="@+id/prev"
                android:layout_height="match_parent"
                android:background="@drawable/prev"
                android:layout_gravity="start"/>
            <Button
                android:layout_width="50dp"
                android:id="@+id/menu"
                android:layout_height="40dp"
                android:background="@drawable/list"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="120dp"
                android:id="@+id/next"
                android:layout_height="match_parent"
                android:background="@drawable/next"
                android:layout_gravity="end"/>

        </android.support.design.widget.BottomNavigationView>

    </android.support.design.widget.CoordinatorLayout>

</FrameLayout>
