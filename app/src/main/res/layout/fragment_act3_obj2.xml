<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.lnrn.meriem.arabeapplication.act.act3_obj2"
    android:background="@drawable/bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_marginRight="15dp"
                    android:text="الوعي الصوتي > رصد القافية  > النشاط 3"
                    android:textColor="#c9c8c8" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <!--LinearLayout
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:background="@drawable/consigne"
               android:id="@+id/textView3"-->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/consigne"
                        android:gravity="start"
                        android:lineSpacingExtra="10dp"
                        android:padding="40dp"
                        android:text="-أَسْتَمِعُ لِلْكَلِمَات.\n-أَضْغَطُ عَلَى الْكَلِمَاتِ الَّتِي لَهَا قَافِيَةُ ( فُطُورٌ )"
                        android:textAlignment="textStart"
                        android:textSize="16sp" />
                    <!--/LinearLayout-->

                    <FrameLayout
                        android:id="@+id/quest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="11dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/mots1"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@color/colorAccent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:checked="false"
                                android:text="قُصُورٌ"
                                />
                            <CheckBox
                                android:id="@+id/mots2"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@color/colorAccent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:checked="false"
                                android:text="فُضُولٌ"/>

                            <CheckBox
                                android:id="@+id/mots3"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="@color/colorAccent"
                                android:layout_margin="10dp"
                                android:gravity="center"
                                android:textColor="#fff"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:checked="false"
                                android:text="سُرُورٌ"
                                />

                        </LinearLayout>

                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_below="@+id/quest"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true">

                        <Button
                            android:id="@+id/setfl"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_menu_send"
                            android:gravity="center"
                            android:shadowColor="@color/colorPrimary" />
                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.NestedScrollView>

    <!--menu-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:theme="?attr/actionBarTheme"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="8dp">
            <Button
                android:layout_width="120dp"
                android:id="@+id/prev"
                android:layout_height="match_parent"
                android:background="@drawable/prev"
                android:layout_gravity="start"/>
            <Button
                android:layout_width="50dp"
                android:id="@+id/menu"
                android:layout_height="40dp"
                android:background="@drawable/list"
                android:layout_gravity="center"/>
            <Button
                android:layout_width="120dp"
                android:id="@+id/next"
                android:layout_height="match_parent"
                android:background="@drawable/next"
                android:layout_gravity="end"/>

        </android.support.design.widget.BottomNavigationView>

    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>
