<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".act.act1"
    android:id="@+id/choix1">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/actionBarSize"
            app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_marginRight="15dp"
                android:text="الوعي الصوتي > رصد المقطع  > النشاط 1"
                android:textColor="#c9c8c8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="start"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/consigne"
            android:gravity="start"
            android:lineSpacingExtra="10dp"
            android:padding="40dp"
            android:text="-أُمَيِّزُ عَدَدَ مَقَاطِعِ كُلِّ كَلِمَةِِ.\n-أُحَدِّدُ عَدَدَ التَّصْفِيقَاتِ الْمُنَاسِبَةِ"
            android:textAlignment="textStart"
            android:textSize="18sp" />

                <FrameLayout
                    android:id="@+id/quest1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="11dp"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp">
                        <ImageView
                            android:id="@+id/mot1"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/word1"/>
                    </RelativeLayout>
                </FrameLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/quest1"
                    android:layout_marginTop="101dp">

                    <ImageView
                        android:id="@+id/claques"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/nbsyllab"
                        android:layout_toStartOf="@+id/nbsyllab"
                        android:src="@drawable/clapping" />
                    <TextView
                        android:id="@+id/nbsyllab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="40dp" />
                    <Button

                        android:id="@+id/setfl"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/nbsyllab"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="70dp"
                        android:layout_marginRight="70dp"
                        android:background="@drawable/ic_menu_send"
                        android:padding="15dp"/>

                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/quest2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="11dp"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp">

                        <ImageView
                            android:id="@+id/mot2"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/word2" />

                    </RelativeLayout>

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/quest3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="11dp"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp">

                        <ImageView
                            android:id="@+id/mot3"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/word3" />

                    </RelativeLayout>

                </FrameLayout>
                <FrameLayout
                    android:id="@+id/quest4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="11dp"
                    android:visibility="invisible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="145dp">

                        <ImageView
                            android:id="@+id/mot4"
                            android:layout_width="200dp"
                            android:layout_height="80dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/word4" />

                    </RelativeLayout>

                </FrameLayout>
            </RelativeLayout>
            </LinearLayout>
            </ScrollView>
        </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="bottom">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:layout_gravity="bottom"
        android:theme="?attr/actionBarTheme"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="8dp">
        <Button
            android:layout_width="50dp"
            android:id="@+id/menu"
            android:layout_height="40dp"
            android:background="@drawable/list"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="120dp"
            android:id="@+id/next"
            android:layout_height="match_parent"
            android:background="@drawable/next"
            android:layout_gravity="end"/>
    </android.support.design.widget.BottomNavigationView>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>





